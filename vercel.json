{
    "version": 2,
    "builds": [
      {
        "src": "./src/index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "./src/config/**",
            "./src/controllers/**",
            "./src/models/**",
            "./src/routes/**",
            "./src/services/**",
            "./src/middlewares/**",
            "./src/utils/**"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "./src/index.js",
        "methods": ["GET", "POST", "PUT", "DELETE"]
      }
    ],
    "build": {
      "env": {
        "NODE_ENV": "production"
      }
    }
}